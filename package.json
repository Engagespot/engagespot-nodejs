{
    "name": "@engagespot/notifications",
    "version": "1.0.0",
    "description": "Easiest way to implement user-specific web push notifications in nodejs.",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "files": [
        "lib/**/*"
    ],
    "scripts": {
        "dev": "nodemon src/index.ts",
        "build": "tsc",
        "prepublish": "tsc",
        "start": "node lib/index.js",
        "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
        "lint:fix": "npm run lint -- --fix",
        "test": "jest",
        "prepare": "npm run build",
        "prepublishOnly": "npm test && npm run lint",
        "preversion": "npm run lint",
        "version": "npm run format && git add -A src",
        "postversion": "git push && git push --tags"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Engagespot/engagespot-node.git"
    },
    "homepage": "https://github.com/Engagespot/engagespot-node#readme",
    "keywords": [
        "Engagespot",
        "Push",
        "Push Notifications",
        "Notifications"
    ],
    "author": "Engagespot",
    "bugs": {
        "url": "https://github.com/Engagespot/engagespot-node/issues"
    },
    "license": "ISC",
    "dependencies": {
        "axios": "0.19.2"
    },
    "devDependencies": {
        "@types/cors": "2.8.6",
        "@types/jest": "25.1.4",
        "@types/node": "^13.9.2",
        "@typescript-eslint/eslint-plugin": "2.25.0",
        "@typescript-eslint/parser": "2.25.0",
        "eslint": "6.8.0",
        "eslint-config-prettier": "6.10.1",
        "eslint-plugin-prettier": "3.1.2",
        "husky": "4.2.3",
        "jest": "25.1.0",
        "lint-staged": "10.0.9",
        "nodemon": "2.0.2",
        "prettier": "2.0.2",
        "ts-jest": "25.2.1",
        "ts-node": "8.8.1",
        "typescript": "3.8.3"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "src/**/*.ts": "eslint --cache --fix"
    }
}
